extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raíces  
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST" action="/propiedades/crear")
                input(type="hidden" name="_csrf" value= csrfToken)
                div.space-y-8
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información General
                    p.text-gray-600 Añade Información sobre la propiedad en venta

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="titulo") Titulo de anuncio
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo Propiedad, ej. Casa en la Playa" type="text" name="titulo" value= datos.titulo ? datos.titulo : '') 

                    div
                        label(for="descripcion", class="block text-sm uppercase text-gray-500 mb-3 font-bold") Descripcion
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Descripcion de la propiedad" name="descripcion")= datos.descripcion ? datos.descripcion : ''


                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="categoria") Categoria
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")     
                                option(value="") - Seleccione -
                                each categoria in categorias 
                                    option(value=categoria.id selected= datos.categoria ? datos.categoria == categoria.id ? true : false : null )= categoria.nombre
            
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")     
                                option(value="") - Seleccione -
                                each precio in precios 
                                    option(value=precio.id selected= datos.precio ? datos.precio == precio.id ? true : false : null)= precio.nombre
            
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="habitaciones")     
                                option(value="") - Seleccione -
                                - var n = 1;
                                while n < 10
                                    option(value=n selected= datos.habitaciones ? datos.habitaciones == n ? true : false : null) #{n++}
            
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="estacionamiento") Estacionamiento
                            select#estacionamiento.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="estacionamiento")     
                                option(value="") - Seleccione -
                                - var n = 1;
                                while n < 5
                                    option(value=n selected= datos.estacionamiento ? datos.estacionamiento == n ? true : false : null) #{n++}
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="wc") WC
                            select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="wc")     
                                option(value="") - Seleccione -
                                - var n = 1;
                                while n < 5
                                    option(value=n selected= datos.wc ? datos.wc == n ? true : false : null) #{n++}

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div.max-w-max 
                            input(type="radio" id="check-renta" class="hidden" name="renta" value=false checked= datos.renta ? true : false)
                            label.inline-flex.items-center.justify-between.w-full.p-5.text-gray-500.bg-white.border-2.border-gray-200.rounded-lg.cursor-pointer(for="check-renta" class="dark:hover:text-gray-300 dark:border-gray-300 peer-checked:bg-redNCS hover:text-gray-600 dark:peer-checked:text-gray-300 peer-checked:text-gray-600 hover:bg-gray-50 dark:text-gray-400 dark:bg-white dark:hover:bg-gray-200 hover:border-white peer-checked:border-white transition ease-in-out")
                                div(class="block peer-hover:text-white") 
                                    //- svg
                                    p.block.text-sm.uppercase.text-gray-900.mb-3.font-bold.w-full Renta
                                    p.text-sm.text-black.w-full.font-semibold Yo quiero rentar mi inmueble
                        div.max-w-max 
                            input(type="radio" id="check-venta" class="hidden " name="venta" value=false checked= datos.venta ? true : false)
                            label.inline-flex.items-center.justify-between.w-full.p-5.text-gray-500.bg-white.border-2.border-gray-200.rounded-lg.cursor-pointer(for="check-venta" class="dark:hover:text-gray-300 dark:border-gray-300 peer-checked:bg-redNCS hover:text-gray-600 dark:peer-checked:text-gray-300 peer-checked:text-gray-600 hover:bg-gray-50 dark:text-gray-400 dark:bg-white dark:hover:bg-gray-200 hover:border-white peer-checked:border-white transition ease-in-out")
                                div(class="block peer-hover:text-white") 
                                    //- svg
                                    p.block.text-sm.uppercase.text-gray-900.mb-3.font-bold.w-full Venta
                                    p.text-sm.text-black.w-full.font-semibold Yo quiero vender mi inmueble 
                    div.border-gray-200.border-t.py-5.space-y-5
                        h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación
                        p.text-gray-600 Ubica la propiedad en el mapa                
                        #mapa.h-96  

                        div 
                            p.calle= datos.calle ? datos.calle : '' 

                        input(type="hidden" name="calle" id="calle" value= datos.calle ? datos.calle : '' )
                        input(type="hidden" name="lat" id="lat" value= datos.lat ? datos.lat : '')
                        input(type="hidden" name="lng" id="lng" value= datos.lng ? datos.lng : '')


                    input(class="w-full py-3 bg-mati4-600 hover:bg-mati4-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Añadir Imagen")    
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")
    script(src="/js/checkboxes.js")